{
  "name": "nuxt-typescript-electron",
  "main": "out/main/main.js",
  "description": "this is sample.",
  "author": {
    "name": "gb"
  },
  "version": "1.0.0",
  "scripts": {
    "nuxt-generate": "nuxt generate",
    "dev-electron-start": "cross-env NODE_ENV=development electron .",
    "start": "npm run dev",
    "dev": "node script/development.js",
    "package": "node script/package.js all",
    "test": "jest",
    "lint": "eslint --ext .ts,.js,.vue --ignore-path .gitignore .",
    "fmt": "eslint --ext .ts,.js,.vue --ignore-path .gitignore . --fix"
  },
  "dependencies": {
    "electron-serve": "^1.1.0",
    "nuxt": "^2.15.7"
  },
  "devDependencies": {
    "@nuxt/types": "^2.15.7",
    "@nuxt/typescript-build": "^2.1.0",
    "@nuxtjs/eslint-config-typescript": "^6.0.1",
    "@types/jest": "^26.0.24",
    "@vue/test-utils": "^1.2.1",
    "babel-core": "^7.0.0-bridge.0",
    "cross-env": "^7.0.3",
    "cross-spawn-promise": "^0.10.2",
    "electron": "^13.1.7",
    "electron-builder": "^22.11.7",
    "eslint": "^7.31.0",
    "express": "^4.17.1",
    "jest": "^27.0.6",
    "jsdom": "^16.6.0",
    "jsdom-global": "^3.0.2",
    "node-loader": "^1.0.3",
    "ts-jest": "^27.0.4",
    "ts-loader": "^8.3.0",
    "typescript": "^4.3.5",
    "vue-jest": "^3.0.7",
    "webpack": "^4.46.0",
    "webpack-cli": "^4.7.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "ts",
      "vue"
    ],
    "transform": {
      ".*\\.(vue)$": "<rootDir>/node_modules/vue-jest",
      "^.+\\.tsx$": "<rootDir>/node_modules/ts-jest",
      "^.+\\.ts$": "<rootDir>/node_modules/ts-jest",
      "^.+\\.js$": "<rootDir>/node_modules/ts-jest"
    },
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/renderer/$1",
      "^~/(.*)$": "<rootDir>/$1/main/$1"
    },
    "setupFilesAfterEnv": [
      "<rootDir>jest.setup.js"
    ]
  }
}
